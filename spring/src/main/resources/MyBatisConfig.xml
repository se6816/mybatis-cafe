<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<setting name="cacheEnabled" value="false"/>
	</settings>
	<typeAliases>
	<!-- handler -->
		<typeAlias type="com.cafe.classic.handler.BooleanIntegerHandler" alias="BooleanIntegerHandler"/>
		<typeAlias type="org.apache.ibatis.type.EnumTypeHandler" alias="EnumTypeHandler"/>
		
		
	<!-- domain -->
		<typeAlias type="com.cafe.classic.domain.BbsVO" alias="BbsVO"/>
		<typeAlias type="com.cafe.classic.domain.FileVO" alias="FileVO"/>
		<typeAlias type="com.cafe.classic.domain.ReplyVO" alias="ReplyVO"/>
		<typeAlias type="com.cafe.classic.domain.UserVO" alias="UserVO"/>
		<typeAlias type="com.cafe.classic.domain.UserReplyVO" alias="UserReplyVO"/>
		<typeAlias type="com.cafe.classic.domain.UserBbsVO" alias="UserBbsVO"/>
		<typeAlias type="com.cafe.classic.domain.ReportVO" alias="ReportVO"/>
		<typeAlias type="com.cafe.classic.domain.BbsListVO" alias="BbsListVO"/>
	</typeAliases>
	
	<typeHandlers>
		<typeHandler handler="com.cafe.classic.handler.BooleanIntegerHandler"/>
	</typeHandlers>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="net.sf.log4jdbc.sql.jdbcapi.DriverSpy"/>
				<property name="url" value="jdbc:log4jdbc:mysql://localhost:3306/prj?useUnicode=true&amp;characterEncoding=utf-8&amp;serverTimezone=UTC&amp;useSSL=false"/>
				<property name="username" value="springuser"/>
				<property name="password" value="spring"/>
			</dataSource>
			
		</environment>
	</environments>
</configuration>